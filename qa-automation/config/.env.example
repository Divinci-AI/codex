# Magentic-One QA Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_org_id_here
OPENAI_PROJECT=your_openai_project_id_here

# QA Configuration
QA_DEBUG=true
QA_TIMEOUT_SECONDS=300
QA_MAX_RETRIES=3
QA_PARALLEL_EXECUTION=false

# Safety and Security
QA_CONTAINER_ISOLATION=true
QA_NETWORK_RESTRICTIONS=true
QA_EXECUTION_TIME_LIMIT=600
QA_MEMORY_LIMIT_MB=1024
QA_CPU_LIMIT_PERCENT=50

# Monitoring and Logging
QA_LOG_LEVEL=INFO
QA_METRICS_ENABLED=true
QA_AUDIT_TRAIL=true
QA_HUMAN_OVERSIGHT_REQUIRED=true

# Testing Configuration
QA_TEST_DATA_DIR=qa-automation/test-data
QA_OUTPUT_DIR=qa-automation/output
QA_REPORT_FORMAT=json
QA_GENERATE_SCREENSHOTS=true
QA_SAVE_EXECUTION_TRACES=true

# Webhook Testing
WEBHOOK_TEST_SERVER_URL=http://webhook-test-server:8080
WEBHOOK_TEST_TIMEOUT=30

# Browser Configuration (for WebSurfer agent)
BROWSER_HEADLESS=true
BROWSER_VIEWPORT_WIDTH=1280
BROWSER_VIEWPORT_HEIGHT=720
BROWSER_TIMEOUT=60

# Development and Debugging
PLAYWRIGHT_DEBUG=false
AUTOGEN_DEBUG=false
PYTHON_DEBUG=false
